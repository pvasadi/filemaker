# === Build environment ===
FROM node:8.15-alpine as builder

# Setup
RUN mkdir /typhoon
WORKDIR /typhoon
ENV PATH /typhoon/node_modules/.bin:$PATH

# Package requirements
{% for bf in dependencies_files %}COPY /typhoon_sites/{{ login }}/{{ website_name }}/{% if root_folder %}{{ root_folder }}/{% endif %}{{ bf }} /typhoon/{{ bf }}
{% endfor %}
{% if dependencies_files %}RUN yarn
{% endif %}

# Source code
COPY /typhoon_sites/{{ login }}/{{ website_name }}{% if root_folder %}/{{ root_folder }}{% endif %} /typhoon

{% if env_variables %}# Environment variables
ENV {{ env_variables }}
{% endif %}

{% if build_script %}RUN cd /typhoon && {{ build_script }}
{% endif %}

# Build the code
RUN yarn build

# === Production environment ===
FROM nginx:1.15-alpine
COPY --from=builder /typhoon/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
